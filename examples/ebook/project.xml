<?xml version="1.0" encoding="utf-8"?>
<project>

	<!-- http://www.haxenme.org/developers/documentation/nmml-project-files/ -->
	<meta title="Glory Framework Demo" package="ca.confidant.gloryDemo" version="1.0.0" company="Confidant Communications" />
	<app main="Main" path="bin" file="GloryDemo" />
	<window width="960" height="640" fps="30" background="0xfff6e2" orientation="landscape" hardware="true" />

 	<set name="BUILD_DIR" value="bin" />

	<source path="src" />

	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="svg" />
	<haxelib name="glory" />
	<haxelib name="puremvc-standard" />
	<haxelib name="swf" />

	<icon path="assets/nme.svg" />
	
	<library path="assets/swflibrary.swf" preload="true" />
	<!-- Options in the assets tag are important. Set embed to true if you want Glory/OpenFL to preload all the pages into memory (HTML5) or bundle them into the swf/app -->
	<assets path="assets" include="*" exclude="*.swf|*.fla" embed="true" />

</project>
