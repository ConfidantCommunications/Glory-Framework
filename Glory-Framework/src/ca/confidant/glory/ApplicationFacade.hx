package ca.confidant.glory;    import org.puremvc.haxe.patterns.facade.Facade;    import ca.confidant.glory.controller.StartupCommand;	import ca.confidant.glory.GloryFrameworkApp;		/*	 * The facade serves to provide references to the app, mediators and proxies. 	 * There are also constants defined here which are used application-wide.	 * See PureMVC documentation for more information.	 */	    class ApplicationFacade extends Facade    {        // Notification name constants        public static var STARTUP:String  					= "startup";        public static var MESSAGE:String  					= "message";        public static var INIT_XML_LOAD:String  			= "initXMLLoad";        public static var INIT_WIDGETS_CONFIG:String  		= "initWidgetsConfig";        public static var ASSETS_LOADED:String  			= "assetsLoaded";        public static var INIT_WIDGETS:String  				= "initWidgets";        public static var PAGES_CONFIG_READY:String  		= "pagesConfigReady";        public static var CALL_EXTERNAL_FUNCTION:String  	= "callExternalFunction";        public static var CONSOLE_LOG:String  				= "consoleLog";        public static var STAGE_RESIZE:String  				= "stageResize";        public static var SET_ACTIVE_WIDGET:String  		= "setActiveWidget";        public static var SET_CONTENT:String				= "setContent";        public static var BUILD_PAGE:String					= "buildPage";        public static var REMOVE_PAGE:String				= "removePage";        public static var BUILD_CONTROLS:String				= "buildControls";        public static var CHANGE_PAGE:String				= "changePage";        public static var HTTP_LINK:String					= "httpLink";        public static var TIMER_TICK:String					= "timerTick";        public static var TIMER_ENABLE:String				= "timerEnable";        public static var TIMER_DISABLE:String				= "timerDisable";        public static var PAN_LEFT:String				= "panLeft";        public static var PAN_RIGHT:String				= "panRight";        public static var PAN_STOP:String				= "panStop";        public static var TOGGLE_OPTIONS:String				= "toggleOptions";        private static var instance : ApplicationFacade;        public static function getInstance() : ApplicationFacade {            if ( instance == null )            		instance = new ApplicationFacade( );            return instance;        }        override private function initializeController( ) : Void        {            super.initializeController();            registerCommand( STARTUP, StartupCommand );        }        public function startup( app:GloryFrameworkApp ):Void        {        	sendNotification( STARTUP, app );        }    }